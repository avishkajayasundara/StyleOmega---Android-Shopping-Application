<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AdminHome"
    android:background="@android:color/holo_orange_light">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/slogan_category"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Click on icon to add new products of that category"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_category_layout1"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/slogan_category">

        <com.rey.material.widget.ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/tshirts_img"
            android:src="@drawable/tshirts"
           />

        <com.rey.material.widget.ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sports_img"
            android:src="@drawable/sports"
            />
        <com.rey.material.widget.ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/female_dresses_img"
            android:src="@drawable/female_dresses"
            />
        <com.rey.material.widget.ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/sweather_img"
            android:src="@drawable/sweather"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_category_layout2"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/linear_category_layout1">

        <com.rey.material.widget.ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/glasses_img"
            android:src="@drawable/glasses"
            />

        <com.rey.material.widget.ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/purse_bag_img"
            android:src="@drawable/purses_bags"
            />
        <com.rey.material.widget.ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:id="@+id/hats_img"
            android:src="@drawable/hats"
            />
        <com.rey.material.widget.ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:id="@+id/shoes_img"
            android:src="@drawable/shoess"
            android:layout_marginStart="16dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_category_layout3"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/linear_category_layout2">

        <com.rey.material.widget.ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/trousers_img"
            android:src="@drawable/trousers"
            />

        <com.rey.material.widget.ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/children_img"
            android:src="@drawable/children"
            />
        <com.rey.material.widget.ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:id="@+id/hwatches_img"
            android:src="@drawable/watches"
            />
        <com.rey.material.widget.ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:id="@+id/tops_img"
            android:src="@drawable/tops"
            android:layout_marginStart="16dp"
            />


    </LinearLayout>
<Button
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_below="@+id/linear_category_layout3"
    android:background="@drawable/buttons"
    android:textColor="@android:color/black"
    android:text="Get Products from Web API"
    android:layout_marginTop="120dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:id="@+id/syncButton"

    >

</Button>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admin_logout"
        android:text="Logout"
        android:layout_below="@+id/syncButton"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="170dp"
        >

    </TextView>
</RelativeLayout>